    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.1",
    "rollup": "^4.28.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
