{
  "name": "web-audio-recorder-ts",
  "version": "1.0.1",
  "type": "module",
  "description": "TypeScript port of web-audio-recorder-js with full type support for WAV, OGG Vorbis, and MP3 audio recording",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.esm.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs.js"
      },
      "browser": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.umd.js"
      },
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "lib",
    "types",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "demo": "vite",
    "test-encoder": "vite demo/test-encoder.html",
    "prepublishOnly": "pnpm build",
    "prepack": "pnpm build",
    "publish:public": "npm publish --access public"
  },
  "keywords": [
    "web-audio",
    "audio-recording",
    "wav",
    "ogg",
    "vorbis",
    "mp3",
    "typescript",
    "webaudio",
    "recorder",
    "browser",
    "microphone",
    "audio-encoder"
  ],
  "author": "luquinhasbrito",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lucasbrito-wdt/web-audio-recorder.git"
  },
  "bugs": {
    "url": "https://github.com/lucasbrito-wdt/web-audio-recorder/issues"
  },
  "homepage": "https://github.com/lucasbrito-wdt/web-audio-recorder#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": "^22.10.1",
    "rollup": "^4.28.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}
